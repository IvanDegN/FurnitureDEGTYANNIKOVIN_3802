<Window x:Class="FurnitureDEGTYANNIKOVIN_3802.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnitureDEGTYANNIKOVIN_3802"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle
            Fill="#FFF3E5AB"
            Grid.Row="0">
        </Rectangle>

        <Rectangle
            Fill="#FFF3E5AB"
            Grid.Row="2">
        </Rectangle>

        <Label
            FontFamily="Comic Sans MS" 
            Content="Мебельман - окно заказчика" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="30">
        </Label>


        <Button 
            
            Name="OpenMaterials"
            Click="OpenMaterials_Click"
            Content="Материалы" Grid.Row="1" Margin="244,108,462,125"/>

        <Button
            FontFamily="Comic Sans MS" 
            Content="Выход" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="75"
            Name="BtnExit"
            Click="BtnExit_Click"
            Grid.Row="2" Margin="707,9,0,0"
            />

        <Image 
            Source="image/logo.png" 
            HorizontalAlignment="Left"
            />


    </Grid>
</Window>
